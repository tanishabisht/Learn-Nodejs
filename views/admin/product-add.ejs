    <main class="add_prod_container">
        <h1 class="heading">Add New Product</h1>
        <form class="add_prod_form" action="/admin/product-add" method="POST">
            <input placeholder="Enter product name..." class="add_prod_input" type="text" name="prod_name">
            <input placeholder="Enter product image url..." class="add_prod_input" type="text" name="prod_img">
            <textarea placeholder="Enter product description..." class="add_prod_input" type="text" name="prod_desc"></textarea>
            <input type="number" step='0.01' placeholder="Enter product price..." class="add_prod_input" type="text" name="prod_price">
            <button class="add_btn" type="submit">Add Product</button>
        </form>
    </main>
